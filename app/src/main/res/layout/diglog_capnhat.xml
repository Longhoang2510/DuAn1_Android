<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="20dp">


    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        style="@style/Titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:text="Chỉnh sửa"
        android:textStyle="bold"
        />


    <Spinner
        android:layout_margin="10dp"
        android:id="@+id/spTypecn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </Spinner>



    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edtNamecn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:id="@+id/tvGiocn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btGiocn"
            android:text="Chọn Giờ"
            android:textSize="15sp"
            android:textColor="#e22800"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:id="@+id/tvNgaycn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btNgaycn"
            android:text="Chọn Ngày"
            android:textColor="#e22800"
            android:background="#ffffff"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edtNotecn"
        android:hint="Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:layout_weight="1"
            android:text="Xóa"
            android:textColor="#e22800"
            android:background="#ffffff"
            android:id="@+id/btXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            />

        <Button
            android:textColor="#e22800"
            android:background="#ffffff"
            android:layout_weight="1"
            android:text="Cập Nhật"
            android:id="@+id/btCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            />


        <Button
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="#e22800"
            android:background="#ffffff"
            android:id="@+id/btHuycn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            />


    </LinearLayout>


</LinearLayout>